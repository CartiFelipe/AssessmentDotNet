@using System.Globalization
@model IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Pacotes tur√≠sticos</h1>

<p>
    <a asp-page="Create">Criar nova</a>
</p>
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TouristPackage[0].Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TouristPackage[0].InitialDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TouristPackage[0].MaximumPeople)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TouristPackage[0].Price)
        </th>
        <th></th>
    </tr>
