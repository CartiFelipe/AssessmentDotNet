    <tbody>
    @foreach (var item in Model.TouristPackage)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InitialDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaximumPeople)
            </td>
            <td>
                @string.Format(CultureInfo.CurrentCulture, "{0:C}", item.Price)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Editar </a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Detalhes </a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Deletar </a>
            </td>
        </tr>
    }
    </tbody>
</table>
