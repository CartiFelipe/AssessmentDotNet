@page
@model DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Reservation</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            Reservation Date:
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.ReservationDate
        </dd>
        <dt class="col-sm-2">
            Tourist Package:
        </dt>
        <dd class="col-sm-10">
            @Model.Reservation.TouristPackage.Title
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Reservation.Id">Editar</a> |
    <a asp-page="./Index">Voltar para a lista</a>
</div>
