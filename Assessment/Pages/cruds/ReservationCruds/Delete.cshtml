@page
@model DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Deletar</h1>

<h3>Tem certeza que deseja deletar essa reserva?</h3>
<div>
    <h4>Reservation</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.ReservationDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.ReservationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Reservation.TouristPackage)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reservation.TouristPackage.Title)
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Reservation.Id"/>
        <input type="submit" value="Deletar" class="btn btn-danger"/> |
        <a asp-page="./Index">Voltar para a lista</a>
    </form>
</div>
