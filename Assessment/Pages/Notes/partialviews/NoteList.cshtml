@model WriteNote


<div class="card mt-4 shadow-sm">
    <div class="card-header bg-light">
        <h4 class="mb-0"><i class="fas fa-sticky-note"></i> Minhas Notas</h4>
    </div>
    <div class="card-body">
        @if (Model.Notes.Count > 0)
        {
            <ul class="list-group">
                @foreach (var note in Model.Notes)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <a asp-page="ReadNote" asp-route-title="@note"
                           class="text-decoration-none text-primary fw-semibold">
                            @note
                        </a>
                        <span class="badge bg-primary rounded-pill"><i class="fas fa-eye"></i></span>
                    </li>
                }
            </ul>
        }
        else
        {
            <div class="alert alert-info mb-0" role="alert">
                Nenhuma nota registrada ainda. Crie sua primeira nota acima!
            </div>
        }
    </div>
</div>