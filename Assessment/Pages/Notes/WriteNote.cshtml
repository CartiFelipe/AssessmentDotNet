@page
@model WriteNote

@{
    ViewData["Title"] = "Write Note";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="fas fa-pencil-alt"></i> Escrever Nota</h2>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group mb-3">
                    <label asp-for="Note.Title" class="form-label fw-bold"></label>
                    <input asp-for="Note.Title" class="form-control" placeholder="Título da nota"/>
                    <span asp-validation-for="Note.Title" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="Note.Content" class="form-label fw-bold"></label>
                    <textarea asp-for="Note.Content" class="form-control" rows="4"
                              placeholder="Escreva sua nota aqui..."></textarea>
                    <span asp-validation-for="Note.Content" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-end">
                    <input type="submit" value="Salvar Nota" class="btn btn-success px-4"/>
                </div>
            </form>
        </div>
    </div>

    <partial name="partialviews/NoteList" model="Model"/>
</div>